<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:window
      id        = "window"
      center    = "true"
      width     = "480"
      height    = "395"
      minwidth  = "415"
      minheight = "247"
      icon      = ""
      buttons   = "close"
      skin      = "bk-window2"
      kbclose   = "true"
      resizable = "false"
      class     = "wizard"
      draggable = "true">
        <a:bar id="body" anchors="10 10 70 10">
        
        </a:bar>
        <a:hbox edge="23 0 10" pack="end" padding="8" bottom="10" right="10" left="10">
            <a:button
              id       = "btnCreateFolder"
              skin     = "btn-default-css3"
              tooltip  = "Create folder">
                Create folder
            </a:button>
            <a:checkbox
              id      = "cbShowFiles"
              skin    = "checkbox_black"
              checked = "false"
              width   = "120"
              margin  = "1 0 0">
                Show files in tree
            </a:checkbox>
            <a:filler />
            <a:button
              id       = "btnCancel"
              skin     = "btn-default-css3"
              caption  = "Cancel"
            />
            <a:button
              id      = "btnChoose"
              class   = "btn-green"
              caption = "Save"
              skin    = "btn-default-css3"
            />
        </a:hbox>
    </a:window>
</a:application>